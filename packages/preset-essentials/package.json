{
  "name": "presetter-preset-essentials",
  "version": "3.5.5",
  "description": "A collection of opinionated preset configurations for typescript projects",
  "keywords": [
    "presetter",
    "preset"
  ],
  "homepage": "https://github.com/alvis/presetter#readme",
  "bugs": {
    "url": "https://github.com/alvis/presetter/issues"
  },
  "license": "MIT",
  "author": "Alvis HT Tang <alvis@hilbert.space>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvis/presetter.git"
  },
  "scripts": {
    "bootstrap": "run-s build",
    "build": "run-s clean setup build:*",
    "build:typescript": "run-s build:typescript:*",
    "build:typescript:tsc": "tsc -p tsconfig.build.json",
    "build:typescript:path": "tsc-alias",
    "clean": "run-p clean:**",
    "clean:lib": "shx rm -rf lib",
    "coverage": "npm run test -- --coverage",
    "lint": "run-s \"lint:* -- source spec\"",
    "lint:prettier": "prettier --write --no-error-on-unmatched-pattern",
    "lint:fixme": "leasot --skip-unsupported --exit-nicely package.json",
    "lint:eslint": "eslint --fix --format stylish --max-warnings 0 --no-error-on-unmatched-pattern",
    "prepublishOnly": "run-s --npm-path npm bootstrap coverage lint",
    "release": "run-s release:peer:*",
    "release:peer:presetter": "npm pkg set peerDependencies.presetter=^$(npx -c 'echo $npm_package_version')",
    "setup": "run-p setup:**",
    "setup:eslint": "js-yaml templates/eslintrc.yaml | pupa --test=spec --output=lib > .eslintrc.json",
    "setup:gitignore": "cat templates/gitignore | pupa --output=lib > .gitignore",
    "setup:jest": "js-yaml templates/jestrc.yaml | pupa --root=../.. --source=source --output=lib > .jestrc.json",
    "setup:lintstaged": "js-yaml templates/lintstagedrc.yaml | pupa --source=source > .lintstagedrc.json",
    "setup:prettier": "js-yaml templates/prettierrc.yaml > .prettierrc.json",
    "setup:tsconfig:base": "js-yaml templates/tsconfig.yaml | pupa --source=source --types=types --output=lib > tsconfig.json",
    "setup:tsconfig:build": "js-yaml templates/tsconfig.build.yaml | pupa --source=source > tsconfig.build.json",
    "stage": "run-s \"stage:* -- {@}\" --",
    "stage:lint": "run-s \"lint:* -- {@}\" --",
    "stage:coverage": "run-s \"test -- --maxWorkers=50% --coverage --collectCoverageFrom {@} --findRelatedTests {@}\" --",
    "test": "jest --config .jestrc.json --no-cache --passWithNoTests --verbose"
  },
  "peerDependencies": {
    "@types/jest": "^28.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "conventional-changelog-metahub": "^4.0.0",
    "cross-env": "^7.0.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-eslint-comments": "^3.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsdoc": "^39.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "leasot": "^13.0.0",
    "lint-staged": "^13.0.0",
    "presetter": "^3.5.5",
    "prettier": "^2.4.0",
    "shx": "^0.3.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": ">=4.7.0"
  },
  "devDependencies": {
    "js-yaml": "^4.0.0",
    "npm-run-all": "^4.0.0",
    "pupa-cli": "^2.0.0"
  }
}
