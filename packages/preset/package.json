{
  "name": "presetter-preset",
  "version": "1.1.0",
  "description": "A collection of opinionated preset configurations for typescript projects",
  "keywords": [
    "presetter",
    "preset"
  ],
  "homepage": "https://github.com/alvis/presetter#readme",
  "bugs": {
    "url": "https://github.com/alvis/presetter/issues"
  },
  "license": "MIT",
  "author": "Alvis HT Tang <alvis@hilbert.space>",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvis/presetter.git"
  },
  "scripts": {
    "build": "run-s clean:lib build:*",
    "build:typescript": "babel --extensions .ts,.tsx,.d.ts --source-maps --copy-files --out-dir lib ./source",
    "clean": "run-p clean:**",
    "clean:lib": "shx rm -rf lib",
    "clean:rc": "shx rm -f .*rc.json",
    "clean:ts": "shx rm -f tsconfig.*",
    "coverage": "npm run test -- --coverage",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --write --no-error-on-unmatched-pattern source spec",
    "lint:fixme": "leasot --skip-unsupported --exit-nicely package.json source spec",
    "lint:eslint": "eslint --fix --format codeframe --max-warnings 0 --no-error-on-unmatched-pattern source",
    "prepare": "run-s --npm-path npm setup build",
    "prepublishOnly": "run-s --npm-path npm coverage lint",
    "setup": "run-p setup:**",
    "setup:peer": "npx npm-install-peers",
    "setup:babel": "js-yaml templates/babelrc.yaml > .babelrc.json",
    "setup:eslint": "js-yaml templates/eslintrc.yaml | pupa --test=spec --output=lib > .eslintrc.json",
    "setup:jest": "js-yaml templates/jestrc.yaml | pupa --root=../.. --source=source --output=lib > .jestrc.json",
    "setup:prettier": "js-yaml templates/prettierrc.yaml > .prettierrc.json",
    "setup:tsconfig:base": "js-yaml templates/tsconfig.yaml | pupa --source=source --types=types --output=lib > tsconfig.json",
    "setup:tsconfig:build": "js-yaml templates/tsconfig.build.yaml | pupa --source=source > tsconfig.build.json",
    "test": "jest --config .jestrc.json --no-cache --passWithNoTests --verbose"
  },
  "peerDependencies": {
    "@babel/cli": "7.x",
    "@babel/core": "7.x",
    "@babel/plugin-proposal-class-properties": "7.x",
    "@babel/plugin-proposal-decorators": "7.x",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.x",
    "@babel/plugin-proposal-object-rest-spread": "7.x",
    "@babel/plugin-proposal-optional-chaining": "7.x",
    "@babel/preset-env": "7.x",
    "@babel/preset-typescript": "7.x",
    "@types/jest": "26.x",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "4.x",
    "@typescript-eslint/parser": "4.x",
    "babel-plugin-transform-typescript-metadata": "0.3",
    "conventional-changelog-metahub": "4.x",
    "eslint": "7.x",
    "eslint-config-prettier": "6.x",
    "eslint-plugin-eslint-comments": "3.x",
    "eslint-plugin-header": "3.x",
    "eslint-plugin-jsdoc": "30.x",
    "eslint-plugin-no-secrets": "0.6",
    "eslint-plugin-sonarjs": "0.6",
    "jest": "26.x",
    "leasot": "10.x",
    "npm-run-all": "4.x",
    "prettier": "2.x",
    "shx": "0.3",
    "standard-version": "9.x",
    "ts-jest": "26.x",
    "ts-node": "9.x",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-paths": "3.x",
    "tscpaths": "0.0.9",
    "typescript": "4.x"
  },
  "devDependencies": {
    "@types/fs-extra": "9.x",
    "@types/js-yaml": "3.x",
    "@types/node": "12.x",
    "install-peers": "1.x",
    "npm-run-all": "4.x",
    "prettier": "2.x",
    "pupa-cli": "1.x",
    "shx": "0.3",
    "typescript": "4.1.x"
  },
  "dependencies": {
    "fs-extra": "9.x",
    "js-yaml": "3.x",
    "pupa": "2.x"
  }
}
