{
  "name": "presetter-preset",
  "version": "1.0.0",
  "description": "A collection of opinionated preset configurations for typescript projects",
  "keywords": [],
  "homepage": "https://github.com/alvis/presetter#readme",
  "bugs": {
    "url": "https://github.com/alvis/presetter/issues"
  },
  "license": "MIT",
  "author": "Alvis HT Tang <alvis@hilbert.space>",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvis/presetter.git"
  },
  "scripts": {
    "build": "run-s clean:lib build:*",
    "build:typescript": "babel --extensions .ts,.tsx,.d.ts --source-maps --copy-files --out-dir lib ./source",
    "clean": "run-p clean:**",
    "clean:lib": "shx rm -rf lib",
    "clean:rc": "shx rm -f .*rc",
    "clean:ts": "shx rm -f tsconfig.*",
    "coverage": "npm run test -- --coverage",
    "lint": "run-s lint:*",
    "lint:prettier": "prettier --write --no-error-on-unmatched-pattern source spec",
    "lint:fixme": "leasot --skip-unsupported --exit-nicely package.json source spec",
    "lint:eslint": "eslint --fix --format codeframe --max-warnings 0 --no-error-on-unmatched-pattern source",
    "prepare": "run-s setup test lint build",
    "setup": "run-p setup:**",
    "setup:peer": "npx npm-install-peers",
    "setup:babel": "js-yaml templates/babelrc.yaml > .babelrc",
    "setup:eslint": "js-yaml templates/eslintrc.yaml > .eslintrc",
    "setup:jest": "js-yaml templates/jestrc.yaml > .jestrc",
    "setup:prettier": "js-yaml templates/prettierrc.yaml > .prettierrc",
    "setup:tsconfig:base": "js-yaml templates/tsconfig.yaml > tsconfig.json",
    "setup:tsconfig:build": "js-yaml templates/tsconfig.build.yaml > tsconfig.build.json",
    "release": "standard-version",
    "test": "jest --config \"$(cat .jestrc)\" --no-cache --passWithNoTests --verbose"
  },
  "peerDependencies": {
    "@babel/cli": "^7.x",
    "@babel/core": "^7.x",
    "@babel/plugin-proposal-class-properties": "^7.x",
    "@babel/plugin-proposal-decorators": "^7.x",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.x",
    "@babel/plugin-proposal-object-rest-spread": "^7.x",
    "@babel/plugin-proposal-optional-chaining": "^7.x",
    "@babel/preset-env": "^7.x",
    "@babel/preset-typescript": "^7.x",
    "@types/jest": "^25.x",
    "@types/node": "^12.x",
    "@typescript-eslint/eslint-plugin": "^3.x",
    "@typescript-eslint/parser": "^3.x",
    "eslint": "^7.x",
    "eslint-config-prettier": "^6.x",
    "eslint-plugin-eslint-comments": "^3.x",
    "eslint-plugin-header": "^3.x",
    "eslint-plugin-jsdoc": "^25.x",
    "eslint-plugin-no-secrets": "^0.6",
    "eslint-plugin-sonarjs": "^0.5",
    "jest": "^25.x",
    "leasot": "^10.x",
    "npm-run-all": "^4.x",
    "prettier": "^2.x",
    "shx": "^0.3",
    "standard-version": "^7.x",
    "ts-jest": "^25.x",
    "ts-node": "^8.x",
    "ts-node-dev": "1.0.0-pre.44",
    "tsconfig-paths": "^3.x",
    "tscpaths": "0.0.9",
    "typescript": "^3.9.x"
  },
  "devDependencies": {
    "@types/node": "^12.x",
    "install-peers": "^1.x",
    "js-yaml": "^3.x",
    "npm-run-all": "^4.x",
    "prettier": "^2.x",
    "shx": "^0.3.2",
    "typescript": "^3.8.x"
  },
  "dependencies": {
  }
}
