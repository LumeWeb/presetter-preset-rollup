{
  "version": "2.1.0",
  "packages": [
    ".",
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "ignore": "presetter-monorepo"
    },
    "version": {
      "changelogPreset": "metahub",
      "conventionalCommits": true,
      "push": false
    },
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish %s"
    },
    "run": {
      "ignore": "presetter-monorepo"
    }
  }
}
